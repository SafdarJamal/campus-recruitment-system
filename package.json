{
  "name": "campus-recruitment-system",
  "version": "1.0.0",
  "description": "Campus Recruitment System built with React/Redux (Client), Node/Express (API), and MongoDB (Database).",
  "main": "index.js",
  "scripts": {
    "install": "cd server && npm i && cd ../client && npm i",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SafdarJamal/campus-recruitment-system.git"
  },
