  "bugs": {
    "url": "https://github.com/SafdarJamal/campus-recruitment-system/issues"
  },
  "homepage": "https://github.com/SafdarJamal/campus-recruitment-system#readme",
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
}
